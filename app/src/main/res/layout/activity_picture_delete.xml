<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!--PictureDeleteAndPreviewActivity 照片或者视频删除-->
    <include android:id="@+id/delete_preview" layout="@layout/activity_title_bar"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/delete_preview_viewPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/delete_preview"
        android:background="@color/color_ee000000">
    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/tv_delete_preview_indicate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textColor="@color/text_white"
        />


</RelativeLayout>